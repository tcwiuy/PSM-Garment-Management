<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_psm_production_tree" model="ir.ui.view">
        <field name="name">psm.production.tree</field>
        <field name="model">psm.production.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="fabric_thickness"/> 
                <field name="quantity"/>
                <field name="fabric_needed"/> 
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_psm_production_form" model="ir.ui.view">
        <field name="name">psm.production.form</field>
        <field name="model">psm.production.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_preview_report" string="Xem trước bản in" type="object" icon="fa-print"/>
                    <button name="action_confirm" string="Bắt đầu may" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Hoàn thành" type="object" class="oe_highlight" invisible="state != 'confirm'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="fabric_thickness"/> 
                        <field name="quantity"/>
                        <field name="fabric_needed"/> 
                        <field name="start_date"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <record id="action_psm_production" model="ir.actions.act_window">
        <field name="name">Lệnh Sản Xuất</field>
        <field name="res_model">psm.production.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_psm_root" name="PSM App" sequence="1"/>
    <menuitem id="menu_psm_production" parent="menu_psm_root" action="action_psm_production" name="Quản lý may mặc"/>
</odoo>